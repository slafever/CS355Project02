<%include ../partials/header%>
<div>
    <% if(rs.length > 0) { %>
    <table border="1">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
        <% for (var i=0; rs.length > i; i++) { %>
        <tr>
            <td><a href="/player/?player_id=<%= rs[i].player_id %>"> <%= rs[i].first_name %></a></td>
            <td><a href="/player/?player_id=<%= rs[i].player_id %>"> <%= rs[i].last_name %></a></td>
            <td>
                <a href="/player/delete/?player_id=<%= rs[i].player_id %>&firstname=<%= rs[i].firstname %>">Delete</a>
                <a href="/player/edit/?player_id=<%= rs[i].player_id %>">Edit</a>
            </td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
    No users exist.
    <% } %>
</div>

<div style="margin-top:10px;">
    <a href="/player/create">Create New Player</a>
</div>
<%include ../partials/footer%>