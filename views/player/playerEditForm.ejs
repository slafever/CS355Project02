<% include ../partials/header.ejs %>

<% if (typeof message !== 'undefined') { %>
<div><%= message %></div>
<% } %>

<% if(rs.length > 0) { %>
<h1>Edit Player</h1>
<form method="POST" action="/player/update_player">
    <input type="hidden" name="player_id" value="<%= rs[0].player_id %>" />
    First Name <input type="text" id="firstname" name="firstname" value="<%= rs[0].first_name%>" />
    <br />
    <br />
    Last Name <input type="text" id="lastname" name="lastname" value="<%= rs[0].last_name%>" />
    <br />
    <br />
    Email <input type="text" id="email" name="email" value="<%= rs[0].email%>" />
    <br />
    <br />
    Username <input type="text" id="username" name="username" value="<%= rs[0].username%>" />
    <br />
    <br />
    Birth Date <input type="text" id="birthdate" name="birthdate" value="<%= rs[0].birth_date%>" />
    <br/>
    <br/>
    Gender <input type="text" id="gender" name="gender" value="<%= rs[0].gender%>" />



    <button id="addBtn">Edit</button>
</form>
<% } else { %>
No Player matches that ID
<% } %>

